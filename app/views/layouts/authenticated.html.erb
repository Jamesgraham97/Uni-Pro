<!DOCTYPE html>
<html>
<head>
  <title>Uni-Pro</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body>
<div class="container-fluid">
<div class="row">
  <!-- Sidebar -->
  <div class="col-sm-auto sticky-top">
    <div class="d-flex flex-sm-column flex-row flex-nowrap bg-light align-items-center sticky-top">
      <%= link_to user_root_path, class: "d-block p-3 link-dark text-decoration-none", title: "Home", data: { bs_toggle: "tooltip", bs_placement: "right", bs_original_title: "Home" } do %>
        <i class="bi-bootstrap fs-1"></i>
      <% end %>

      <ul class="nav nav-pills nav-flush flex-sm-column flex-row flex-nowrap mb-auto mx-auto text-center justify-content-between w-100 px-3 align-items-center">
        <li class="nav-item">
          <%= link_to all_modules_path, class: "nav-link py-3 px-2", title: "Modules", data: { bs_toggle: "tooltip", bs_placement: "right", bs_original_title: "Modules" } do %>
            <i class="bi-journal-text fs-1"></i>
          <% end %>
        </li>
        <li>
          <%= link_to all_assignments_path, class: "nav-link py-3 px-2", title: "Assignments", data: { bs_toggle: "tooltip", bs_placement: "right", bs_original_title: "Assignments" } do %>
            <i class="bi-pencil-square fs-1"></i>
          <% end %>
        </li>
        <li>
          <%= link_to kanban_path, class: "nav-link py-3 px-2", title: "Kanban", data: { bs_toggle: "tooltip", bs_placement: "right", bs_original_title: "Kanban" } do %>
            <i class="bi-kanban fs-1"></i>
          <% end %>
        </li>
        <li>
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link py-3 px-2", title: "Sign out", data: { bs_toggle: "tooltip", bs_placement: "right", bs_original_title: "Sign out" } do %>
          <i class="bi-box-arrow-right fs-1"></i>
        <% end %>
      </li>      
      </ul>
      <div class="dropdown">
        <a href="#" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="bi-person-circle h2"></i>
        </a>
        <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
          <li><a class="dropdown-item" href="#">New project...</a></li>
          <li><a class="dropdown-item" href="#">Settings</a></li>
          <li><a class="dropdown-item" href="#">Profile</a></li>
          <li><hr class="dropdown-divider"></li>
        </ul>
      </div>
    </div>
  </div>
      <!-- Main content -->
      <div class="col-sm p-3 min-vh-100">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>
